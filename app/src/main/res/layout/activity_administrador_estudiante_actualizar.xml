<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Vista.Administrador.Cliente.actualizarEstudiante">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_estudiante_actualizar_administrador"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_cedula_estudiante_admin"
            tools:ignore="SpeakableTextPresentCheck" android:minHeight="48dp"
            android:hint="cédula"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_estudiante_actualizar_administrador"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_nombre_estudiante_admin"
            android:hint="nombre"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintStart_toStartOf="@+id/tv_actualizar_cedula_estudiante_admin"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_cedula_estudiante_admin"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_telefono_estudiante_admin"
            android:hint="Teléfono"
            tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintStart_toStartOf="@+id/tv_actualizar_nombre_estudiante_admin"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_nombre_estudiante_admin"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/tv_actualizar_date_estudiante_admin"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:hint="Fecha de nacimiento"
            app:layout_constraintStart_toStartOf="@+id/tv_actualizar_email_estudiante_admin"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_email_estudiante_admin"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_email_estudiante_admin"
            android:hint="Email" tools:ignore="TouchTargetSizeCheck"
            app:layout_constraintStart_toStartOf="@+id/tv_actualizar_telefono_estudiante_admin"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_telefono_estudiante_admin"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_carrera_estudiante_admin"
            tools:ignore="TouchTargetSizeCheck" android:hint="Carrera"
            app:layout_constraintStart_toStartOf="@+id/tv_actualizar_date_estudiante_admin"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_date_estudiante_admin"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_act_estudiante"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_carrera_estudiante_admin"
            app:layout_constraintEnd_toStartOf="@+id/btn_act_cancelar_estudiante"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="21dp"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_act_cancelar_estudiante"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_carrera_estudiante_admin"
            app:layout_constraintStart_toEndOf="@+id/btn_act_estudiante" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>