<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Vista.Administrador.Curso.actualizarCurso">

    <EditText
            android:layout_width="311dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_codigo_curso_admin"
            tools:ignore="SpeakableTextPresentCheck" android:minHeight="48dp"
            android:hint="codigo"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_curso_actualizar_administrador"
            android:layout_marginBottom="11dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_actualizar_nombre_curso_admin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginEnd="56dp"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonIngresar_curso"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_curso_actualizar"
            app:layout_constraintEnd_toStartOf="@+id/botonCancelar_curso" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botonCancelar_curso"
            app:layout_constraintStart_toEndOf="@+id/botonIngresar_curso" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_nombre_curso_admin"
            android:hint="nombre"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_codigo_curso_admin"
            android:layout_marginBottom="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_actualizar_creditos_curso_admin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" android:layout_marginEnd="53dp"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_creditos_curso_admin"
            android:hint="Creditos"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_nombre_curso_admin"
            android:layout_marginBottom="13dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_actualizar_ciclo_curso_admin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginEnd="52dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/recyclerView_curso_actualizar"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_ciclo_curso_admin"
            android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/botonIngresar_curso"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="139dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_año_curso_admin"
            android:hint="Año"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_creditos_curso_admin"
            app:layout_constraintEnd_toStartOf="@+id/tv_actualizar_ciclo_curso_admin" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_curso_actualizar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginEnd="18dp"/>
    <EditText
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tv_actualizar_ciclo_curso_admin"
            android:hint="Ciclo"
            app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_creditos_curso_admin"
            app:layout_constraintStart_toEndOf="@+id/tv_actualizar_año_curso_admin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_curso_actualizar" android:layout_marginEnd="52dp"
    />
    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar_curso_actualizar_administrador"
            android:layout_marginBottom="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_actualizar_codigo_curso_admin"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>