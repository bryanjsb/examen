<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/login_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".Vista.Login.CambiarContrasenaLoginActivity"
>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical"

                  android:layout_gravity="center" android:gravity="center">
        <ImageView
                android:layout_width="208dp"
                android:layout_height="190dp" app:srcCompat="@drawable/padlock" android:id="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="0dp"
                app:layout_constraintHorizontal_bias="0.493" android:contentDescription="TODO"
                android:layout_gravity="center"/>
        <EditText
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/ed_cedulaCambiarContra"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintHorizontal_bias="0.497"
                android:hint="Cedula" android:minHeight="48dp"
                android:layout_gravity="center"/>
        <EditText
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ed_contraActualCambiarContra"
                app:layout_constraintTop_toBottomOf="@+id/ed_cedulaCambiarContra"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.502"
                android:hint="Contraseña Actual" android:minHeight="48dp" android:layout_gravity="center"/>
        <EditText
                android:layout_width="291dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ed_contraNueva_CambiarContra"
                app:layout_constraintTop_toBottomOf="@+id/ed_contraActualCambiarContra"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.492"
                android:hint="Contraseña Nueva" android:minHeight="48dp" android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:foregroundGravity="center" android:gravity="center"
                android:layout_gravity="center">
            <Button
                    android:text="Cambiar Contraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_cambiarContra"
                    app:layout_constraintTop_toBottomOf="@+id/ed_contraNueva_CambiarContra"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.295"
                    android:drawableLeft="@drawable/key" android:layout_gravity="center"
                    app:iconGravity="textEnd|textTop|textStart" android:foregroundGravity="center"/>
            <Button
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp" android:id="@+id/btn_Cancelar_CambiarContra"
                    app:layout_constraintStart_toEndOf="@+id/btn_cambiarContra"
                    app:layout_constraintTop_toBottomOf="@+id/ed_contraNueva_CambiarContra"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.384" app:layout_constraintVertical_bias="0.295"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>